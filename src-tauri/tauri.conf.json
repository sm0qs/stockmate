{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "stockmate",
	"version": "0.0.0",
	"identifier": "pl.foxlab.stockmate",
	"build": {
		"beforeDevCommand": "vite dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "vite build",
		"frontendDist": "../build",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Stockmate",
				"width": 900,
				"height": 600
			}
		],
		"security": {
			"csp": null,
			"capabilities": ["core", "plugins"]
		}
	},
	"bundle": {
		"publisher": "sm0qs",
		"category": "Photography",
		"shortDescription": "Upload photos to stock services and social media",
		"copyright": "Â© 2026 sm0qs Licensed under the GPL-3.0-or-later",
		"license": "GPL-3.0-or-later",
		"active": true,
		"targets": ["msi", "nsis"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
